//https://www.codechef.com/problems/HS08TEST
#include<bits/stdc++.h>
using namespace std;

int main() {
int x;
 double y,total;
 cin>>x>>y;
 
 if((x%5==0) && (y-0.50>=x))
 {
     total =y-x-0.50;
      std::cout<<std::fixed<<std::setprecision(2)<<total;
 }
 else
 {
      std::cout<<std::fixed<<std::setprecision(2)<<y;
 }
}
